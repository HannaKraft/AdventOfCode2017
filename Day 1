--

import qualified Data.Text as Text
import qualified Data.Text.IO as Text

main = do
    ls <- fmap Text.lines (Text.readFile "filename.txt")
    print $ firstLast ls  + captcha ls

firstLast :: [Integer] -> Integer
firstLast list = do
    if (head list) == (last list) 
    then head list
        else 0
        
captcha :: [Integer] -> Integer
captcha (c:[]) = 0
captcha (a:b:cd) = do 
    if a==b then a + captcha (b:cd) 
        else (captcha (b:cd))
